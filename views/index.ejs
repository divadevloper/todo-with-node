<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <main>
        <form id="register" class="w-50 mx-auto p-3 rounded shadow mt-4" action="/" method="post">

            <h3 class="mx-auto">Todo List</h3>
            <div class="form-group mt-3">
                <input name="name" id="autho" type="text" class="form-control" placeholder="Your Name">
            </div>
            <div class="form-group mt-3">
                <input name="todocontent" id="todo" type="text" class="form-control" placeholder="Add todo ...">
            </div>
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary w-50 fs-2">click</button>
            </div>

          
        </form>

        <div>
            <% if (todo && todo.length > 0) { %>
             <% todo.forEach((element,i) => { %>
              <div  class="d-flex justify-content-between text-align-center w-50 mx-auto" >
                <p><%= element.name %></p>
                <p><%= element.todocontent %></p>
               <ul class="d-flex">
                <li>
                <form id="delete" action="/delete/<%=element.id%>" method="post">
                    <button type="submit" class="btn btn-danger">delete</button>
                </form>
            </li>
                <li>
                    <form action="/edittodo/<%= element.id %>" method="get">
                        <button type="submit" class="btn btn-primary">edit</button>
                    </form>
                </li>
            </ul>
              </div>
             <% }) %>
            <% } %>
        </div>
    </main>
</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>